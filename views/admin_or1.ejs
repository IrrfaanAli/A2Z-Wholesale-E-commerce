<body class="bg-blue-200">
    <header class="text-6xl pt-6 ml-16 text-white hover:text-blue-700">Order</header>
    <table class="ui inverted blue table" style="margin: 50px 0 0 0;">
        <tr>
            <th>Order ID</th>
            <th>Order Status</th>
            <th>Actions</th>
        </tr>

        <%  if(orders.length>0){     %>

            <% for(var i=0; i<orders.length;i++) {    %>
               
                <tr>
                    <td><%- orders[i].order_id %></td>
                  
                    <td><%- orders[i].status %></td>
                
                  
                    <td><a href="/delete_order?order_id=<%- orders[i].order_id %>" <button class='ui inverted button'>Delete</a>
                        <a href="/update_order?order_id=<%- orders[i].order_id %>" <button class='ui inverted button'></button>Update</a>
                    </td>
                </tr>

           <% } %> 

       <% } %> 
    </table>
