<body class="bg-blue-200">
  <header class="text-6xl pt-6 ml-16 text-white hover:text-blue-700">Coupon</header>
  <p style= 'margin:0 0 0 1390px;' ><a href=/coupon2><button class='ui blue button'>Add new product</button></a></p>
  <p style= 'margin:10px 0 0 1380px;' ><a href=/abc><button class='ui red button'>Back to Dashboard</button></a></p>
    <table class="ui inverted blue table" style="margin: 50px 0 0 0;">
        <tr>
            <th>Coupon ID</th>
            <th>Coupon Code</th>
            <th>Discount Percentage</th>
            <th>Actions</th>
        </tr>

        <%  if(coupon.length>0){ %>

            <% for(var i=0; i<coupon.length;i++) {    %>
               
                <tr>
                    <td class="text-black"><%- coupon[i].Coupon_Id %></td>
                    <td><%- coupon[i].Coupon_Code %></td>
                    <td><%- coupon[i].Discount_Percentage%> %</td>
                
                  
                    <td><a href="/delete_coupon?Coupon_Id=<%- coupon[i].Coupon_Id %>" <button class='ui inverted button'>Delete</a>
                        <a href="/update_coupon?Coupon_Id=<%- coupon[i].Coupon_Id %>" <button class='ui inverted button'></button>Update</a>
                    </td>
                </tr>

           <% } %> 

       <% } %> 
    </table>
     

